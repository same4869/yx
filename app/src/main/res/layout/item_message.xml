<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/square_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15">

        <LinearLayout
            android:id="@+id/questioner_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_questioner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/yellow"
                android:textSize="@dimen/sp17" />

            <View
                android:id="@+id/questioner_red_point"
                android:layout_width="@dimen/dp8"
                android:layout_height="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/red_point" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016.10.1"
            android:textColor="@color/edit_bg"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questioner_view"
            android:layout_marginTop="@dimen/dp5"
            android:text="请问教练老师"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1v"
        android:layout_marginLeft="@dimen/dp15"
        android:background="@color/edit_bg" />

    <RelativeLayout
        android:id="@+id/answer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15">

        <LinearLayout
            android:id="@+id/answerer_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_answerer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="葛教练"
                android:textColor="@color/yellow"
                android:textSize="@dimen/sp17" />

            <View
                android:id="@+id/answerer_red_point"
                android:layout_width="@dimen/dp8"
                android:layout_height="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/red_point" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answerer_view"
            android:layout_marginTop="@dimen/dp5"
            android:text="你要问啥"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />

    </RelativeLayout>

    <TextView
        android:id="@+id/btn_reply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48v"
        android:gravity="center"
        android:text="回复"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp17" />

</LinearLayout>