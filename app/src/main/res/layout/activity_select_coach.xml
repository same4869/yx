<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/comm_linear_bg"
    tools:context="com.ml.yx.activity.base.SelectCoachActivity">

    <com.ml.yx.views.YouXinTitleBar
        android:id="@+id/youxin_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        yx:showUserAvatar="false"
        yx:barBackground="@color/transparent"
        yx:barTitle="@string/select_coach_title"/>

    <GridView
        android:id="@+id/grid_coach"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/dp15"
        android:layout_weight="1"
        android:listSelector="@color/transparent"
        android:horizontalSpacing="@dimen/dp10"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/dp15"/>

</LinearLayout>
