<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp40v"
    android:background="@drawable/circle_current"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/level_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DAY"
        android:textColor="@color/level_current_item_text_color_1"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/level_current_item_text_color_2"
        android:textSize="@dimen/sp24" />

</LinearLayout>