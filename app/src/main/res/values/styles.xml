<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/comm_bg</item>
    </style>

    <style name="TransparentActivity" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        　　    	<item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="coverOverlay" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@mipmap/first</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="inputBg">
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:padding">@dimen/dp3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/edit_bg</item>
    </style>

    <style name="buttonBg">
        <item name="android:background">@drawable/button_bg_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="user_block">
        <item name="android:background">@color/black_bg</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
    </style>

    <style name="user_item">
        <item name="android:background">@drawable/user_item_bg</item>
        <item name="android:layout_height">@dimen/dp48</item>
        <item name="android:paddingLeft">@dimen/dp10</item>
    </style>

    <style name="line">
        <item name="android:background">@color/item_line</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="user_item_key">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="user_item_value">
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:layout_marginRight">@dimen/dp20</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
